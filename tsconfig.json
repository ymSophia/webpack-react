{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2021",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "isolatedModules": true,
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
